

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Multi Table Search</title>
    <link href="~/Content/css/multi-table-search.css" rel="stylesheet" />
</head>
<body>

    <h1>Multi Table Search</h1>
    <div>
        <div class="row" style="margin-top:50px;">
            <div class="col-md-4">
                <input id="input-country" class="form-control" placeholder="Search by country" />
            </div>
            <div class="col-md-4">
                <input id="input-city" class="form-control" placeholder="Search by City" />
            </div>
            <div class="col-md-4">
                <input id="input-countrycode" class="form-control" placeholder="Search by Country code" />
            </div>
        </div>

        <div class="row" style="margin-top:30px;">
            <div class="col-md-12">
                <label>Filtered By:</label>

                <label id="filter-country" class="labelStyle invisible"> </label>

                <label id="filter-city" class="labelStyle invisible"> </label>

                <label id="filter-code" class="labelStyle invisible"> </label>

                <label class="record-containing-label invisible"> Showing <span id="total-record-showing"></span>/<span id="total-records"></span> records.</label>
            </div>
        </div>


        <div class="row" style="margin-top:30px;">
            <div class="col-md-12">
                <table id="TableFilter" class="table table-striped table-bordered table-sm sortable" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th onclick="sortByCountry()">Country</th>
                            <th onclick="sortByCity()">City</th>
                            <th onclick="sortByCountryCode()">Country Code</th>
                        </tr>
                        <tr hidden id="dataRow">
                            <td id="country"></td>
                            <td id="city"></td>
                            <td id="countrycode"></td>
                        </tr>
                    </thead>
                    <tbody id="tbody"></tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="invisible">

    </div>
</body>
</html>
@section scripts{
    <script src="~/Content/js/multi-table-search.js"></script>
}